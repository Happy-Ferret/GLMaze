TARGET = GLMaze
OBJ = main.o scene.o maze.o mesh.o camera.o walker.o drawer.o noise.o file.o window.o config.o
LIB = -lopengl32 -lglu32 -lFreeImage -lmingw32 -lSDLmain -lSDL -lMathLib -lglew32
FLAGS = -g -Wall

$(TARGET): $(OBJ)
	gcc $(FLAGS) -o $@ $(OBJ) $(LIB)

clean:
	rm $(OBJ) $(TARGET)

%.o: %.c
	gcc $(FLAGS) -c $<
